<% provide :title, @title%>
<h3><%= @title %></h3>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
        <%= will_paginate @users %>
        <% if @users.any? %>
            <ul class="users">
              <%= render @users %>
            </ul>
        <% end %>
  </div>
</div>